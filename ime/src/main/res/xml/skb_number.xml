<?xml version="1.0" encoding="utf-8"?>
<keyboard default_position_x="@string/px_415" default_position_y="@string/default_keyboard_position_y">

    <row margin_top="" >
        <!-- Switch to Chinese keyboard button -->
        <key label="英/中" text_size="@string/function_key_text_size" width="@string/big_key_width"
            stroke_color="@color/toggle_key_stroke" normal_bg_color="@color/toggle_key_normal_bg"
            text_color="@color/toggle_key_label" keycode="@integer/key_code_switch_to_en" />

        <keys labels="1|2|3|." codes="8|9|10|56" width="@string/big_key_width" splitter="|"/>

        <!-- Delete button -->
        <key icon="@drawable/ic_delete" width="@string/middle_key_width" keycode="67"
            stroke_color="@color/toggle_key_stroke" normal_bg_color="@color/toggle_key_normal_bg"/>
    </row>

    <row>
        <key label="123" width="@string/big_key_width" text_color="@color/toggle_key_label"
            stroke_color="@color/toggle_key_stroke" normal_bg_color="@color/toggle_key_normal_bg"/>

        <keys labels="4|5|6|0" codes="11|12|13|7" width="@string/big_key_width" splitter="|"/>

        <key label="完\n成" label_orientation="@integer/vertical" width="@string/middle_key_width"
            normal_bg_color="@color/toggle_key_normal_bg" text_size="0.019791" cross_row="2"
            stroke_color="@color/toggle_key_stroke" keycode="@integer/key_code_options" />
    </row>

    <row>
        <key label="符" text_size="@string/function_key_text_size" width="@string/big_key_width"
            stroke_color="@color/toggle_key_stroke" normal_bg_color="@color/toggle_key_normal_bg"
            text_color="@color/toggle_key_label" />

        <keys labels="7|8|9|@" codes="14|15|16|77" width="@string/big_key_width" splitter="|"/>

    </row>
</keyboard>