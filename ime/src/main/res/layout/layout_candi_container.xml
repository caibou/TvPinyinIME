<?xml version="1.0" encoding="utf-8"?>
<me.caibou.ime.keyboard.CandidateContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/keyboard_background_color">

    <ImageView
        android:id="@+id/iv_left_more"
        android:layout_width="44px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="180px"
        android:src="@drawable/ic_left_more"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_right_more"
        android:layout_width="44px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="180px"
        android:src="@drawable/ic_right_more"
        android:visibility="gone" />

    <me.caibou.ime.keyboard.CandidatesView
        android:id="@+id/candi_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

</me.caibou.ime.keyboard.CandidateContainer>


